<div class="container_landing">

    <!-- a Bootstrap row with columns -->
    <div class="row">
        <!-- At large+ or medium screens takes up 2/3 width (8/12) small take full screen 12/12 -->
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div id = "landingjumbotron" class="jumbotron jumbotron-fluid">
                <h2 class=""> Our website help users doing job search management and compare their performance to their cohort.</h2>
                <hr>
                <h4 class="text-center"> Sign up today to start job searching.</h4>
                <p class="text-center"><button id="signup" class="btn btn-outline-success" data-target="#signUpModal" type="submit">Sign Up</button></p>

            </div>
            <!-- sign-up log-in form popup here -->
			{{!-- sign-up form --}}
            <row>
                <div class="modal" tabindex="-1" id="signupModal" role="dialog">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title">Sign Up</h5>
                          <button type="button" id = "signupClose" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>

                        <div class="modal-body">
                         {{!-- sign-up input form  --}}
						<form id="signupForm">
							<div class="form-group">
								<div class="form-group">
									<label class ="label-control" for="cohort">Select a Cohort if you belong to any or leave it as general</label>
									<select class="custom-select" id="cohort_name" >
										{{!-- <option>general</option>
										<option>TellmeTellme</option>
										<option>Farley's gang</option> --}}
                    {{#each cohorts}}
                      <option>
                          {{cohort_name}}
                      </option>
                    {{/each}}
									</select>
								</div>
								<label class ="label-control">User Name (unique id you use to log into our website)</label>
								<input placeholder="User Name" type="text" class="form-control" id="user_name">
								<br/>
								<label class ="label-control">First Name</label>
								<input placeholder="First Name" type="text" class="form-control" id="first_name">
								<br/>
								<label class ="label-control">Last Name</label>
								<input placeholder="Last Name" type="text" class="form-control" id="last_name">
								<br/>
								<label class ="label-control">Password (6-10 number or characters)</label>
								<input placeholder="Password" type="text" class="form-control" id="password">
			
							</div>
						</form>

                        </div>
                        <div class="modal-footer">
                          	<button type="submit" id="signup_btn" class="btn btn-success btn-outline-success submit">Submit</button>

                        </div>
                      </div>
                    </div>
                  </div>

            </row>

			{{!-- log-in form --}}
            <row>
                <div class="modal" tabindex="-1" id="loginModal" role="dialog">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class=" text-center modal-title">Log In</h5>
                          <button type="button" id = "loginClose" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>

                        <div class="modal-body">
                          {{!-- log-in input form  --}}
						<form id="loginForm">
							<div class="form-group">
								<div class="form-group">
								</div>
								<label class ="label-control">User Name </label>
								<input placeholder="User Name" type="text" class="form-control" id="login_user_name">
								<br/>
								<label class ="label-control">Password </label>
								<input placeholder="Password" type="password" class="form-control" id="login_password">
							</div>
						</form>

                        </div>
                        <div class="modal-footer">
                          	<button type="submit" id="login_btn" class="btn btn-success btn-outline-success submit">Log In</button>
                        </div>
                      </div>
                    </div>
                  </div>

            </row>
        </div>

    </div>

</div>
</div>
